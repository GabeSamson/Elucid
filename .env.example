# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# NextAuth - Generate secret with: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_generated_secret_here

# Stripe (Get from https://dashboard.stripe.com/test/apikeys)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Google OAuth (Optional - for Google Sign In)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Apple Sign In (Optional - for Apple Sign In)
APPLE_CLIENT_ID=your_apple_client_id
APPLE_CLIENT_SECRET=your_apple_client_secret

# Database - Neon PostgreSQL
DATABASE_URL=postgresql://username:password@host.neon.tech/dbname?sslmode=require

# Resend - Email Service
RESEND_API_KEY=your_resend_api_key_here

# Reset Website Token - KEEP SECRET! (Generate with: openssl rand -base64 32)
RESET_WEBSITE_TOKEN=your_reset_token_here

# Cron Secret - For automated tasks (Generate with: openssl rand -base64 32)
CRON_SECRET=your_cron_secret_here

# Google Analytics 4 (Optional - for website analytics)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Meta Pixel (Optional - for Facebook/Instagram ads)
NEXT_PUBLIC_META_PIXEL_ID=your_meta_pixel_id_here

# TikTok Pixel (Optional - for TikTok ads)
NEXT_PUBLIC_TIKTOK_PIXEL_ID=your_tiktok_pixel_id_here
